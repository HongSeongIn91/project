package member.command;

import java.util.HashMap;
import java.util.Map;

import javax.naming.NamingException;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import member.service.DuplicateIdException;
import member.service.JoinRequest;
import member.service.JoinService;
import mvc.command.CommandHandler;

public class JoinHandler implements CommandHandler {

	private static final String FORM_VIEW = "/WEB-INF/view/joinForm.jsp";
	private JoinService joinService = new JoinService();
	
	@Override
	public String process(HttpServletRequest req, HttpServletResponse res)
			throws Exception {
		if(req.getMethod().equalsIgnoreCase("GET")) {
			return processForm(req, res); // 요청방식이 GET이면 processForm(req, res) 실행
		} else if(req.getMethod().equalsIgnoreCase("POST")) {
			return processSubmit(req, res); // 요청방식이 POST면 processSubmit(req, res) 실행
		} else {
			res.setStatus(HttpServletResponse.SC_METHOD_NOT_ALLOWED);
			return null;          // GET , POST 둘다 아니면 405 응답 코드 전송
		}
	}

	private String processSubmit(HttpServletRequest req, HttpServletResponse res) throws ClassNotFoundException, NamingException {
		// 회원가입 폼에 입력된 데이터로 JoinRequest 객체 생성
	    
		JoinRequest joinReq = new JoinRequest(); 
		joinReq.setM_id(req.getParameter("m_id"));
		joinReq.setM_pw(req.getParameter("m_pw"));
		joinReq.setM_birth(req.getParameter("m_birth"));
		joinReq.setM_gender(req.getParameter("m_gender"));
		joinReq.setM_email(req.getParameter("m_email"));
	    joinReq.setM_phone(req.getParameter("m_phone"));
	    
	    System.out.println("여긴 조인핸들러 joinForm 에서 넘어온 정보 확인");
	    System.out.println("m_id >>"+req.getParameter("m_id") );		
    	System.out.println("m_pw >>"+req.getParameter("m_pw") );		
    	System.out.println("m_birth >>"+req.getParameter("m_birth") );		
    	System.out.println("m_gender >>"+req.getParameter("m_gender") );		
	    System.out.println("m_email_total->"+req.getParameter("m_email") );		
    	System.out.println("m_phone_total->"+req.getParameter("m_phone") );		
    	
		joinReq.setConfirmPassword(req.getParameter("confirmPassword"));
		
		Map<String, Boolean> errors = new HashMap<String, Boolean>();
		req.setAttribute("errors", errors);
		
		joinReq.validate(errors); // JoinRequest 객체의 값이 올바른지 검사, JoinRequest.java의 validate()
		
		if(!errors.isEmpty()) {
			return FORM_VIEW;
		}
		
		try {
			JoinService.join(joinReq);
			return "/WEB-INF/view/joinSuccess.jsp";
		} catch (DuplicateIdException e) {
			errors.put("duplicateId", Boolean.TRUE);
			return FORM_VIEW;
		}
		
	}

	private String processForm(HttpServletRequest req, HttpServletResponse res) {
		
		return FORM_VIEW;
	}
}
